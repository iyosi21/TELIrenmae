#配列処理するので複数のパスを指定化
$DIRS=@(<パス１>,<パス２>)

while(1){
    foreach($DIR in $DIRS){
        $results = (Get-ChildItem $DIR -include *<対象にしたいファイル名>*.<拡張子> -Recurse)
        if ($results.Length -ne 0){
            foreach($result in $results){
                $Bname = $result.Name
                $result_path_name = split-path $result.DirectoryName -Leaf
                
                ♯フォルダ名と元のファイルのファイル名を結合した文字列を作る。
                
                $Aname = $result_path_name + $Bname
                ♯リネームする
                Get-ChildItem $result | Rename-Item -NewName { $_.name -replace $Bname, $Aname}
            }
        }else{
        }
    }
    ♯10秒スリープ
    Start-Sleep -Seconds 10
}
